<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.jota.patterns.MainActivity"
    >

  <TextView
      android:id="@+id/triangle_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />

  <View
      android:id="@+id/separator"
      android:layout_width="match_parent"
      android:layout_height="2dip"
      android:background="@color/colorPrimaryDark"
      android:layout_marginTop="12dp"
      android:layout_marginBottom="12dp"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Create triangle:"
      android:textSize="16sp"
      />

  <Button
      android:id="@+id/equilateral_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Equilateral"
      android:textAllCaps="false"
      />

  <Button
      android:id="@+id/isoceles_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Isosceles"
      android:textAllCaps="false"
      />

  <Button
      android:id="@+id/scalene_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Scalene"
      android:textAllCaps="false"
      />
</LinearLayout>
