<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.jota.patterns.prototype.MainActivity"
    >

  <TextView
      android:id="@+id/description_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="TV"
      android:textSize="18sp"
      android:textStyle="bold"
      />

  <View
      android:id="@+id/separator"
      android:layout_width="match_parent"
      android:layout_height="2dip"
      android:background="@color/colorPrimaryDark"
      android:layout_marginTop="12dp"
      android:layout_marginBottom="12dp"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Add TV:"
      android:textSize="16sp"
      />

  <Button
      android:id="@+id/add_lcd_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="LCD"
      />

  <Button
      android:id="@+id/add_led_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="LED"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Delete TV:"
      android:textSize="16sp"
      android:layout_marginTop="16dp"
      />

  <Button
      android:id="@+id/delete_lcd_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="LCD"
      />

  <Button
      android:id="@+id/delete_led_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="LED"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Clone TV:"
      android:textSize="16sp"
      android:layout_marginTop="16dp"
      />

  <Button
      android:id="@+id/clone_lcd_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="LCD"
      />

  <Button
      android:id="@+id/clone_led_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="LED"
      />

</LinearLayout>
